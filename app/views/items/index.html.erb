<div class="min-h-screen h-screen flex flex-col bg-slate-50">
  <%= render 'layouts/dashboard_header' %>
  <div class="flex flex-1 min-h-0">
    <%= render 'layouts/dashboard_sidebar' %>
    <main class="flex-1 p-6 min-h-0 h-full overflow-auto">
      <!-- ページタイトルと新規登録ボタン -->
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-slate-800">物品一覧</h1>
        <%= link_to new_item_path, class: "bg-blue-400 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition flex items-center justify-center" do %>
          物品の新規登録
        <% end %>
      </div>

      <!-- 検索・フィルターバー -->
      <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4 mb-6">
        <div class="flex flex-wrap gap-4 items-end">
          <div class="flex-1 min-w-64">
            <label class="block text-sm font-medium text-slate-700 mb-1">物品名</label>
            <input type="text" placeholder="物品名で検索..." class="w-full border border-slate-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
          </div>
          <div class="w-48">
            <label class="block text-sm font-medium text-slate-700 mb-1">分類</label>
            <select class="w-full border border-slate-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
              <option value="">すべて</option>
              <option value="1">消耗品</option>
              <option value="2">電子機器</option>
            </select>
          </div>
          <div class="w-48">
            <label class="block text-sm font-medium text-slate-700 mb-1">保管場所</label>
            <select class="w-full border border-slate-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
              <option value="">すべて</option>
              <option value="1">棚A</option>
              <option value="2">第1倉庫</option>
              <option value="3">棚B</option>
            </select>
          </div>
          <button class="bg-blue-400 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded transition">
            検索
          </button>
        </div>
      </div>

      <!-- 商品一覧テーブル -->
      <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200">
            <thead class="bg-slate-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">物品名</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">在庫数</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">分類</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">保管場所</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">入庫</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">出庫</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">操作</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
              <% if @items.any? %>
                <% @items.each do |item| %>
                  <tr class="hover:bg-slate-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to item.name, item_path(item), class: "text-blue-600 hover:text-blue-800 font-medium underline" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                      <%= item.stock_quantity %><%= item.unit %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                      <%= item.category&.name || '未設定' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                      <%= item.location&.name || '未設定' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                      <button class="text-green-600 hover:text-green-800" title="入庫">
                        <i class="fas fa-download"></i>
                      </button>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                      <button class="text-red-600 hover:text-red-800" title="出庫">
                        <i class="fas fa-upload"></i>
                      </button>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <div class="flex space-x-2">
                        <%= link_to '編集', edit_item_path(item), class: "text-green-600 hover:text-green-900" %>
                                                                                                                        <%= form_with url: item_path(item), method: :delete, local: true, style: "display: inline;" do |f| %>
                          <%= f.submit '削除',
                              data: {
                                controller: "delete-confirmation",
                                action: "click->delete-confirmation#confirm",
                                confirm: "「#{item.name}」を削除しますか？\n\nこの操作は取り消せません。\n関連する入出庫履歴も削除されます。"
                              },
                              class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6" class="px-6 py-8 text-center text-slate-500">
                    <div class="text-lg mb-2">物品が登録されていません</div>
                    <div class="text-sm">新規登録ボタンから物品を追加してください</div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- ページネーション（後で実装） -->
      <div class="mt-6 flex justify-center">
        <nav class="flex items-center space-x-2">
          <button class="px-3 py-2 text-sm text-slate-500 hover:text-slate-700">←前</button>
          <button class="px-3 py-2 text-sm bg-blue-500 text-white rounded">1</button>
          <button class="px-3 py-2 text-sm text-slate-500 hover:text-slate-700">2</button>
          <button class="px-3 py-2 text-sm text-slate-500 hover:text-slate-700">3</button>
          <span class="px-3 py-2 text-sm text-slate-500">...</span>
          <button class="px-3 py-2 text-sm text-slate-500 hover:text-slate-700">9</button>
          <button class="px-3 py-2 text-sm text-slate-500 hover:text-slate-700">10</button>
          <button class="px-3 py-2 text-sm text-slate-500 hover:text-slate-700">次→</button>
        </nav>
      </div>
    </main>
  </div>
</div>
