<div class="h-screen flex items-center justify-center bg-slate-50">
  <div class="w-full max-w-xl p-10 bg-white rounded-xl shadow-lg flex flex-col items-center">
    <%= image_tag 'FlapStock_logo.png', alt: 'FlapStock', class: 'w-56 mb-8' %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-6 w-full">
        <%= f.label :name, 'ユーザー名', class: 'block text-gray-700 mb-2 text-lg' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-full border border-slate-300 rounded px-5 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg' %>
      </div>
      <div class="mb-6 w-full">
        <%= f.label :email, 'メールアドレス', class: 'block text-gray-700 mb-2 text-lg' %>
        <%= f.email_field :email, autocomplete: "email", class: 'w-full border border-slate-300 rounded px-5 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg' %>
  </div>
      <div class="mb-6 w-full">
        <%= f.label :password, 'パスワード', class: 'block text-gray-700 mb-2 text-lg' %>
    <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">（<%= @minimum_password_length %>文字以上）</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-full border border-slate-300 rounded px-5 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg mt-1' %>
  </div>
      <div class="mb-8 w-full">
        <%= f.label :password_confirmation, 'パスワード（確認）', class: 'block text-gray-700 mb-2 text-lg' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full border border-slate-300 rounded px-5 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg' %>
  </div>
      <div class="mb-6 w-full flex justify-center">
        <%= f.submit '新規登録', class: 'w-40 bg-blue-500 text-white font-bold py-3 px-6 rounded hover:bg-blue-700 transition text-lg' %>
  </div>
<% end %>
    <div class="mt-4 text-center">
<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
