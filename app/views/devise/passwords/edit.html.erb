<div class="h-screen flex items-center justify-center bg-slate-50">
  <div class="w-full max-w-xl p-10 bg-white rounded-xl shadow-lg flex flex-col items-center">
    <%= image_tag 'FlapStock_logo.png', alt: 'FlapStock', class: 'w-56 mb-8' %>

    <h2 class="text-2xl font-bold text-gray-900 mb-6">新しいパスワードを設定</h2>
    <p class="text-gray-600 mb-8 text-center">新しいパスワードを入力してください。</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "w-full" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-6">
        <%= f.label :password, '新しいパスワード', class: 'block text-gray-700 mb-2 text-lg' %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mb-2">（<%= @minimum_password_length %>文字以上）</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
            class: 'w-full border border-slate-300 rounded px-5 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg' %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, '新しいパスワード（確認）', class: 'block text-gray-700 mb-2 text-lg' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: 'w-full border border-slate-300 rounded px-5 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg' %>
      </div>

      <div class="mb-6">
        <%= f.submit 'パスワードを変更',
            class: 'w-full bg-blue-500 text-white font-bold py-3 px-6 rounded hover:bg-blue-700 transition text-lg' %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to 'ログイン画面に戻る', new_session_path(resource_name), class: 'text-blue-700 hover:underline text-base' %>
    </div>
  </div>
</div>
