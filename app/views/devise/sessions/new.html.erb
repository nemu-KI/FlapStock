<div class="h-screen flex items-center justify-center bg-slate-50">
  <div class="w-full max-w-xl p-10 bg-white rounded-xl shadow-lg flex flex-col items-center">
    <%= image_tag 'FlapStock_logo.png', alt: 'FlapStock', class: 'w-56 mb-8' %>

    <%= render 'shared/flash_messages_persistent' %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full" }) do |f| %>
      <div class="mb-6 w-full">
        <%= f.label :email, 'メールアドレス', class: 'block text-gray-700 mb-2 text-lg' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border border-slate-300 rounded px-5 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg' %>
      </div>
      <div class="mb-8 w-full">
        <%= f.label :password, 'パスワード', class: 'block text-gray-700 mb-2 text-lg' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full border border-slate-300 rounded px-5 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg' %>
      </div>
      <div class="mb-6 w-full flex justify-center">
        <%= f.submit 'ログイン', class: 'w-40 bg-blue-500 text-white font-bold py-3 px-6 rounded hover:bg-blue-700 transition text-lg' %>
      </div>
    <% end %>
    <div class="mt-4 text-center">
      <%= link_to '新規登録', new_registration_path(resource_name), class: 'text-blue-700 hover:underline block text-base' %>
      <%= link_to 'パスワードをお忘れの方はこちら', new_password_path(resource_name), class: 'text-blue-700 hover:underline block text-base' %>
    </div>
  </div>
</div>
