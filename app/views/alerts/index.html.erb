<div class="min-h-screen flex flex-col bg-slate-50">
  <%= render 'layouts/dashboard_header' %>
  <div class="flex flex-1 min-h-0">
    <%= render 'layouts/dashboard_sidebar' %>
    <main class="flex-1 p-6 min-h-0 overflow-auto">
      <!-- フラッシュメッセージ -->
      <%= render 'shared/flash_messages_persistent' %>

      <!-- ページタイトル -->
      <div class="mb-6">
        <h1 class="text-xl sm:text-2xl font-bold text-gray-900">在庫アラート</h1>
        <p class="text-sm text-gray-600 mt-2">在庫不足・過剰の物品を一覧表示します</p>
      </div>

      <!-- 統計カード -->
      <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6 mb-6 sm:mb-8">
        <!-- 総物品数 -->
        <div class="bg-white rounded-lg shadow p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-center">
            <div class="flex items-center sm:block">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
              <div class="ml-2 sm:ml-0 sm:mt-2 min-w-0">
                <p class="text-xs font-medium text-gray-600">総物品数</p>
                <p class="text-lg sm:text-2xl font-bold text-gray-900"><%= @total_items %>種</p>
              </div>
            </div>
          </div>
        </div>

        <!-- アラート設定済み物品数 -->
        <div class="bg-white rounded-lg shadow p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-center">
            <div class="flex items-center sm:block">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 sm:w-6 sm:h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
              </div>
              <div class="ml-2 sm:ml-0 sm:mt-2 min-w-0">
                <p class="text-xs font-medium text-gray-600">アラート設定済み</p>
                <p class="text-lg sm:text-2xl font-bold text-gray-900"><%= @items_with_alerts %>種</p>
              </div>
            </div>
          </div>
        </div>

        <!-- 在庫不足 -->
        <div class="bg-white rounded-lg shadow p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-center">
            <div class="flex items-center sm:block">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 sm:w-6 sm:h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-2 sm:ml-0 sm:mt-2 min-w-0">
                <p class="text-xs font-medium text-gray-600">在庫不足</p>
                <p class="text-lg sm:text-2xl font-bold text-red-600"><%= @low_stock_count %>種</p>
              </div>
            </div>
          </div>
        </div>

        <!-- 在庫過剰 -->
        <div class="bg-white rounded-lg shadow p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-center">
            <div class="flex items-center sm:block">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 sm:w-6 sm:h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-2 sm:ml-0 sm:mt-2 min-w-0">
                <p class="text-xs font-medium text-gray-600">在庫過剰</p>
                <p class="text-lg sm:text-2xl font-bold text-orange-600"><%= @overstock_count %>種</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- クイックアクション -->
      <div class="bg-white rounded-lg shadow mb-4 sm:mb-6">
        <div class="p-4 sm:p-6 border-b border-gray-200">
          <h2 class="text-base sm:text-lg font-semibold text-gray-900">クイックアクション</h2>
        </div>
        <div class="p-4 sm:p-6">
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4">
            <%= link_to alerts_stock_path(type: 'all'), class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50" do %>
              <div class="p-2 bg-gray-100 rounded-lg mr-4">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-gray-900">全アラート一覧</h3>
                <p class="text-sm text-gray-500">在庫不足・過剰の全物品を表示</p>
              </div>
            <% end %>

            <%= link_to alerts_stock_path(type: 'low_stock'), class: "flex items-center p-4 border border-red-200 rounded-lg hover:bg-red-50" do %>
              <div class="p-2 bg-red-100 rounded-lg mr-4">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-gray-900">在庫不足のみ</h3>
                <p class="text-sm text-gray-500">最小在庫以下の物品を表示</p>
              </div>
            <% end %>

            <%= link_to alerts_stock_path(type: 'overstock'), class: "flex items-center p-4 border border-orange-200 rounded-lg hover:bg-orange-50" do %>
              <div class="p-2 bg-orange-100 rounded-lg mr-4">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-gray-900">在庫過剰のみ</h3>
                <p class="text-sm text-gray-500">最大在庫を超える物品を表示</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- 最近のアラート物品 -->
      <% if @alert_items.any? %>
        <div class="bg-white rounded-lg shadow">
          <div class="p-4 sm:p-6 border-b border-gray-200">
            <h2 class="text-base sm:text-lg font-semibold text-gray-900">最近のアラート物品</h2>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full min-w-[600px] divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">物品名</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">現在在庫</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">アラート種別</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">分類</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">保管場所</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @alert_items.limit(10).each do |item| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                      <div>
                        <div class="text-xs sm:text-sm font-medium text-gray-900">
                          <%= link_to item.name, item_path(item), class: "text-blue-600 hover:text-blue-800" %>
                        </div>
                        <% if item.sku.present? %>
                          <div class="text-xs sm:text-sm text-gray-500">型式: <%= item.sku %></div>
                        <% end %>
                      </div>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm text-gray-900">
                      <%= item.stock_quantity %> <%= item.unit %>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                      <% case item.stock_alert_status %>
                      <% when 'low_stock' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          在庫不足
                        </span>
                      <% when 'overstock' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                          在庫過剰
                        </span>
                      <% end %>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm text-gray-900">
                      <%= item.category.name %>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm text-gray-900">
                      <%= item.location.name %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="px-4 sm:px-6 py-3 bg-gray-50 text-right">
            <%= link_to 'すべて表示', alerts_stock_path, class: "text-xs sm:text-sm text-blue-600 hover:text-blue-800" %>
          </div>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow p-6 sm:p-8 text-center">
          <svg class="mx-auto h-10 w-10 sm:h-12 sm:w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-2 text-xs sm:text-sm font-medium text-gray-900">アラートなし</h3>
          <p class="mt-1 text-xs sm:text-sm text-gray-500">現在、在庫アラートは発生していません。</p>
        </div>
      <% end %>
    </main>
  </div>
</div>
