<div class="min-h-screen flex flex-col bg-slate-50">
  <%= render 'layouts/dashboard_header' %>
  <div class="flex flex-1 min-h-0">
    <%= render 'layouts/dashboard_sidebar' %>
    <main class="flex-1 p-4 sm:p-6 min-h-0 overflow-auto">
      <!-- フラッシュメッセージ -->
      <%= render 'shared/flash_messages_persistent' %>

      <!-- ページタイトル -->
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900">ダッシュボード</h1>
      </div>

      <!-- 統計カード -->
      <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6 mb-6 sm:mb-8">
        <!-- 総物品数 -->
        <div class="bg-white rounded-lg shadow p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-center">
            <div class="flex items-center sm:block">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
              <div class="ml-2 sm:ml-0 sm:mt-2 min-w-0">
                <p class="text-xs font-medium text-gray-600">総物品数</p>
                <p class="text-lg sm:text-2xl font-bold text-gray-900"><%= @total_items %>種</p>
              </div>
            </div>
          </div>
        </div>

        <!-- 在庫アラート -->
        <div class="bg-white rounded-lg shadow p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-center">
            <div class="flex items-center sm:block">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 sm:w-6 sm:h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
              </div>
              <div class="ml-2 sm:ml-0 sm:mt-2 min-w-0">
                <p class="text-xs font-medium text-gray-600">在庫アラート</p>
                <p class="text-lg sm:text-2xl font-bold text-gray-900"><%= @total_alerts %>件</p>
              </div>
            </div>
          </div>
        </div>

        <!-- 今月の入庫回数 -->
        <div class="bg-white rounded-lg shadow p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-center">
            <div class="flex items-center sm:block">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                </svg>
              </div>
              <div class="ml-2 sm:ml-0 sm:mt-2 min-w-0">
                <p class="text-xs font-medium text-gray-600">今月の入庫</p>
                <p class="text-lg sm:text-2xl font-bold text-gray-900"><%= @monthly_inbound_count %>回</p>
              </div>
            </div>
          </div>
        </div>

        <!-- 今月の出庫回数 -->
        <div class="bg-white rounded-lg shadow p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-center">
            <div class="flex items-center sm:block">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 sm:w-6 sm:h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
                </svg>
              </div>
              <div class="ml-2 sm:ml-0 sm:mt-2 min-w-0">
                <p class="text-xs font-medium text-gray-600">今月の出庫</p>
                <p class="text-lg sm:text-2xl font-bold text-gray-900"><%= @monthly_outbound_count %>回</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- 最近の入出庫履歴 -->
      <div class="bg-white rounded-lg shadow mb-4 sm:mb-6">
        <div class="p-4 sm:p-6 border-b border-gray-200">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-0">
            <h2 class="text-base sm:text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              最近の入出庫履歴
            </h2>
            <%= link_to '詳細を見る', stock_movements_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
        </div>
        <% if @recent_movements.any? %>
          <div class="overflow-x-auto">
            <table class="w-full table-fixed divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="w-32 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    日時
                  </th>
                  <th class="w-40 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    物品名
                  </th>
                  <th class="w-24 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    操作種別
                  </th>
                  <th class="w-20 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    数量
                  </th>
                  <th class="w-32 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    理由
                  </th>
                  <th class="w-24 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    操作者
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @recent_movements.each do |movement| %>
                  <tr class="hover:bg-gray-50">
                    <td class="w-32 px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= movement.created_at.strftime('%m/%d %H:%M') %>
                    </td>
                    <td class="w-40 px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= link_to movement.item.name, item_path(movement.item), class: "text-blue-600 hover:text-blue-800" %>
                    </td>
                    <td class="w-24 px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                        <%= movement.inbound? ? 'bg-green-100 text-green-800' :
                            movement.outbound? ? 'bg-red-100 text-red-800' :
                            'bg-blue-100 text-blue-800' %>">
                        <%= movement.movement_category_i18n %>
                      </span>
                    </td>
                    <td class="w-20 px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= movement.quantity %> <%= movement.item.unit %>
                    </td>
                    <td class="w-32 px-6 py-4 text-sm text-gray-900 truncate">
                      <%= movement.reason %>
                    </td>
                    <td class="w-24 px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= movement.user&.name || 'Unknown' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-500">入出庫履歴はありません</p>
          </div>
        <% end %>
      </div>

      <!-- 分類別・保管場所別統計 -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- 分類別統計 -->
        <div class="bg-white rounded-lg shadow">
          <div class="p-6 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 text-indigo-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              分類別物品数
            </h2>
          </div>
          <% if @items_by_category.any? %>
            <div class="overflow-x-auto">
              <table class="w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="w-2/3 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      分類名
                    </th>
                    <th class="w-1/3 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      物品数
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @items_by_category.each do |category_name, count| %>
                    <tr class="hover:bg-gray-50">
                      <td class="w-2/3 px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        <%= category_name %>
                      </td>
                      <td class="w-1/3 px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= count %>件
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-8">
              <p class="text-gray-500">分類のデータがありません</p>
            </div>
          <% end %>
        </div>

        <!-- 保管場所別統計 -->
        <div class="bg-white rounded-lg shadow">
          <div class="p-6 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              保管場所別物品数
            </h2>
          </div>
          <% if @items_by_location.any? %>
            <div class="overflow-x-auto">
              <table class="w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="w-2/3 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      保管場所名
                    </th>
                    <th class="w-1/3 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      物品数
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @items_by_location.each do |location_name, count| %>
                    <tr class="hover:bg-gray-50">
                      <td class="w-2/3 px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        <%= location_name %>
                      </td>
                      <td class="w-1/3 px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= count %>件
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-8">
              <p class="text-gray-500">保管場所のデータがありません</p>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>
