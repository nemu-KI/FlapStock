<div class="min-h-screen flex flex-col bg-slate-50">
  <%= render 'layouts/dashboard_header' %>
  <div class="flex flex-1 min-h-0">
    <%= render 'layouts/dashboard_sidebar' %>

    <!-- コンテンツエリア -->
    <div class="flex-1 p-6 overflow-auto">
      <!-- フラッシュメッセージ（自動消去なし） -->
      <%= render 'shared/flash_messages_persistent' %>

      <!-- ページタイトルと新規登録ボタン -->
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-slate-800">分類一覧</h1>
        <% if policy(Category).create? %>
          <%= link_to new_category_path, class: button_classes(variant: :primary, size: :md) + " inline-flex items-center" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            新規登録
          <% end %>
        <% end %>
      </div>

      <!-- 分類一覧テーブル -->
      <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full min-w-[600px] divide-y divide-slate-200">
            <thead class="bg-slate-50">
              <tr>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">分類名</th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">登録物品数</th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">説明</th>
                <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">操作</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
              <% @categories.each do |category| %>
                <tr class="hover:bg-slate-50">
                  <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm font-medium text-slate-900">
                    <%= category.name %>
                  </td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm text-slate-500">
                    <%= category.items.count %>件
                  </td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-500">
                    <%= truncate(category.description, length: 30) if category.description.present? %>
                  </td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm font-medium">
                    <div class="flex flex-col sm:flex-row space-y-1 sm:space-y-0 sm:space-x-2">
                      <% if policy(category).update? %>
                        <%= link_to edit_category_path(category), class: "text-blue-600 hover:text-blue-900" do %>
                          編集
                        <% end %>
                      <% end %>
                      <% if policy(category).destroy? %>
                        <%= form_with url: category_path(category), method: :delete, local: true, style: "display: inline;" do |f| %>
                          <%= f.submit '削除',
                              onclick: "return confirm('「#{category.name}」を削除しますか？\\n\\nこの操作は取り消せません。\\n関連する物品がある場合は削除できません。')",
                              class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" %>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- データがない場合のメッセージ -->
        <% if @categories.empty? %>
          <div class="text-center py-8">
            <p class="text-slate-500">新規登録ボタンから分類を追加してください</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
