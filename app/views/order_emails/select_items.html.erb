<div class="min-h-screen flex flex-col bg-slate-50">
  <%= render 'layouts/dashboard_header' %>
  <div class="flex flex-1 min-h-0">
    <%= render 'layouts/dashboard_sidebar' %>
    <div class="flex-1 p-6 overflow-auto">
      <!-- フラッシュメッセージ -->
      <%= render 'shared/flash_messages_persistent' %>

      <!-- ページタイトル -->
      <div class="flex justify-between items-center mb-6">
        <div>
          <h1 class="text-2xl font-bold text-slate-800">発注メール作成</h1>
          <p class="text-sm text-slate-600 mt-1">発注する物品を選択してください</p>
        </div>
      </div>

      <!-- 検索・フィルターバー -->
      <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4 mb-6">
        <%= search_form_for @q, url: select_items_order_emails_path, html: { class: "grid grid-cols-1 md:grid-cols-3 gap-4 items-end" } do |sf| %>
          <div>
            <%= sf.label :name_or_sku_cont, "物品名・型式", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= sf.search_field :name_or_sku_cont,
                                placeholder: "品名・型式で検索",
                                class: "w-full border border-slate-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          </div>
          <div>
            <%= sf.label :supplier_id_eq, "発注先", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= sf.select :supplier_id_eq,
                          options_from_collection_for_select(current_user.company.suppliers.order(:name), :id, :name, @q.supplier_id_eq),
                          { include_blank: '全ての発注先' },
                          class: "w-full border border-slate-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          </div>
          <div class="flex gap-2">
            <%= sf.submit "検索", class: button_classes(variant: :primary, size: :md) %>
            <%= link_to "クリア", select_items_order_emails_path, class: button_classes(variant: :secondary, size: :md) %>
          </div>
        <% end %>
      </div>

      <%= form_with url: new_order_email_path, method: :get, local: true, class: "space-y-6", id: "select-items-form" do |f| %>
        <!-- 物品リスト -->
        <div class="bg-white rounded-lg shadow">
          <% if @items.any? %>
            <div class="divide-y divide-gray-200">
              <% @items.each do |item| %>
                <label class="flex items-start p-4 hover:bg-slate-50 cursor-pointer transition">
                  <%= check_box_tag 'item_ids[]', item.id, false,
                                    id: "item_#{item.id}",
                                    class: "item-checkbox mt-1 rounded border-slate-300 text-blue-600 focus:ring-blue-500" %>

                  <div class="ml-3 flex-1">
                    <div class="flex items-center justify-between">
                      <h3 class="text-base font-semibold text-slate-900">
                        <%= item.name %>
                        <% if item.sku.present? %>
                          <span class="ml-2 text-sm font-normal text-slate-600">(型式: <%= item.sku %>)</span>
                        <% end %>
                      </h3>

                      <% if item.needs_alert? %>
                        <span class="ml-2 px-2 py-1 text-xs font-semibold rounded-full <%= item.stock_alert_status == 'low_stock' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                          <%= item.alert_message %>
                        </span>
                      <% end %>
                    </div>

                    <div class="mt-2 grid grid-cols-2 gap-4 text-sm text-slate-600">
                      <div>
                        <span class="font-medium text-slate-700">発注先:</span>
                        <%= item.supplier&.name || '未設定' %>
                        <% unless item.supplier&.email.present? %>
                          <span class="ml-1 text-red-600 text-xs">(メールアドレス未設定)</span>
                        <% end %>
                      </div>
                      <div>
                        <span class="font-medium text-slate-700">現在庫:</span>
                        <%= item.stock_quantity %>個 / 最低在庫: <%= item.min_stock %>個
                      </div>
                    </div>
                  </div>
                </label>
              <% end %>
            </div>

            <!-- ページネーション -->
            <div class="px-4 py-3 bg-slate-50 border-t border-slate-200">
              <%= paginate @items %>
            </div>
          <% else %>
            <div class="p-8 text-center text-slate-500">
              物品が見つかりませんでした
            </div>
          <% end %>
        </div>

        <!-- アクションボタン -->
        <div class="flex justify-between mt-6">
          <%= link_to "キャンセル", dashboard_path, class: button_classes(variant: :secondary, size: :md) %>
          <%= f.submit "次へ", class: button_classes(variant: :primary, size: :md) %>
        </div>
      <% end %>

      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const form = document.getElementById('select-items-form');

          if (form) {
            form.addEventListener('submit', function(event) {
              const checkboxes = document.querySelectorAll('.item-checkbox:checked');

              if (checkboxes.length === 0) {
                event.preventDefault();
                alert('発注する物品を少なくとも1つ選択してください');
                return false;
              }
            });
          }
        });
      </script>
    </div>
  </div>
</div>
