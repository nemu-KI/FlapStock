<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title || 'FlapStock - 在庫管理システム' %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= @page_description || 'FlapStockは、効率的な在庫管理を実現するWebアプリケーションです。' %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= ogp_tags(@page_title, @page_description) %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload", preload: true %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Chartkickの直接読み込み（CORS問題の回避） -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation@3.0.1/dist/chartjs-plugin-annotation.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartkick@5.0.1/dist/chartkick.min.js"></script>


         <!-- モバイルメニューのJavaScript -->
         <script>
           function initializeMobileMenu() {
             const mobileMenuButton = document.getElementById('mobile-menu-button');
             const mobileMenuClose = document.getElementById('mobile-menu-close');
             const sidebar = document.getElementById('sidebar');
             const overlay = document.getElementById('mobile-menu-overlay');
             const mobileHeader = document.querySelector('.lg\\:hidden');
             const desktopUserInfo = document.querySelector('.hidden.lg\\:flex');

             if (!sidebar) {
               return;
             }

             // レスポンシブ制御関数
             function handleResponsiveLayout() {
               const isDesktop = window.innerWidth >= 1024;

               if (isDesktop) {
                 // PC画面: サイドバーを常に表示、モバイルヘッダーを非表示
                 sidebar.style.position = 'static';
                 sidebar.style.transform = 'translateX(0)';
                 sidebar.style.width = '16rem'; // w-64

                 if (mobileHeader) {
                   mobileHeader.style.display = 'none';
                 }

                 if (desktopUserInfo) {
                   desktopUserInfo.style.display = 'flex';
                 }

                 if (mobileMenuButton) {
                   mobileMenuButton.style.display = 'none';
                 }
               } else {
                 // モバイル画面: サイドバーを隠す、モバイルヘッダーを表示
                 sidebar.style.position = 'fixed';
                 sidebar.style.transform = 'translateX(-100%)';
                 sidebar.style.width = '16rem'; // w-64

                 if (mobileHeader) {
                   mobileHeader.style.display = 'flex';
                 }

                 if (desktopUserInfo) {
                   desktopUserInfo.style.display = 'none';
                 }

                 if (mobileMenuButton) {
                   mobileMenuButton.style.display = 'block';
                 }
               }
             }

             // サイドバーを開く
             function openSidebar() {
               sidebar.style.transform = 'translateX(0)';
               if (overlay) {
                 overlay.classList.remove('hidden');
               }
               document.body.classList.add('overflow-hidden');
             }

             // サイドバーを閉じる
             function closeSidebar() {
               sidebar.style.transform = 'translateX(-100%)';
               if (overlay) {
                 overlay.classList.add('hidden');
               }
               document.body.classList.remove('overflow-hidden');
             }

             // ハンバーガーメニューボタン
             if (mobileMenuButton) {
               mobileMenuButton.addEventListener('click', function(e) {
                 e.preventDefault();
                 openSidebar();
               });
             }

             // 閉じるボタン
             if (mobileMenuClose) {
               mobileMenuClose.addEventListener('click', function(e) {
                 e.preventDefault();
                 closeSidebar();
               });
             }

             // オーバーレイクリック
             if (overlay) {
               overlay.addEventListener('click', function(e) {
                 e.preventDefault();
                 closeSidebar();
               });
             }

             // ESCキーで閉じる
             document.addEventListener('keydown', function(e) {
               if (e.key === 'Escape') {
                 closeSidebar();
               }
             });

             // 初期化とリサイズ時の処理
             handleResponsiveLayout();
             window.addEventListener('resize', handleResponsiveLayout);
           }

           // DOMContentLoadedとTurboの両方に対応
           document.addEventListener('DOMContentLoaded', initializeMobileMenu);
           document.addEventListener('turbo:load', initializeMobileMenu);
         </script>
  </head>

  <body class="m-0 p-0">
    <%= yield %>

    <!-- フッター -->
    <footer class="bg-gray-800 text-white py-6 mt-8">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">FlapStock</h3>
            <p class="text-gray-300 text-sm">
              在庫管理システム
            </p>
          </div>

          <div>
            <h4 class="text-md font-semibold mb-3">サービス</h4>
            <ul class="space-y-1 text-sm">
              <li><%= link_to "ダッシュボード", dashboard_path, class: "text-gray-300 hover:text-white" %></li>
              <li><%= link_to "物品管理", items_path, class: "text-gray-300 hover:text-white" %></li>
              <li><%= link_to "入出庫履歴", stock_movements_path, class: "text-gray-300 hover:text-white" %></li>
            </ul>
          </div>

          <div>
            <h4 class="text-md font-semibold mb-3">サポート</h4>
            <ul class="space-y-1 text-sm">
              <li><%= link_to "プライバシーポリシー", privacy_policy_path, class: "text-gray-300 hover:text-white" %></li>
              <li><%= link_to "利用規約", terms_of_service_path, class: "text-gray-300 hover:text-white" %></li>
              <li><%= link_to "お問い合わせ", help_contact_path, class: "text-gray-300 hover:text-white" %></li>
            </ul>
          </div>
        </div>

        <div class="border-t border-gray-700 mt-6 pt-4 text-center text-sm text-gray-400">
          <p>&copy; <%= Date.current.year %> FlapStock. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
