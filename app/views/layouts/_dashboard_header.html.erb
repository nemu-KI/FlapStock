<header class="flex items-center justify-between px-8 py-4 bg-white shadow w-full">
  <div class="flex items-center space-x-3">
    <%= image_tag 'FlapStock_logo.png', alt: 'FlapStock', class: 'h-10 w-auto' %>
  </div>
  <div class="flex items-center space-x-6">
    <div class="flex items-center space-x-4">
      <%= link_to "ご利用ガイド", guide_path, class: "text-gray-700 hover:text-blue-600 transition-colors" %>
      <%= link_to "ヘルプ", help_path, class: "text-gray-700 hover:text-blue-600 transition-colors" %>
      <%= link_to "お問い合わせ", contact_path, class: "text-gray-700 hover:text-blue-600 transition-colors" %>
    </div>
    <span class="text-base text-gray-700"><%= current_user&.name || 'ユーザー名' %></span>
    <a href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow" class="text-blue-700 hover:underline">ログアウト</a>
  </div>
</header>
