<div class="min-h-screen flex flex-col bg-slate-50">
  <%= render 'layouts/dashboard_header' %>
  <div class="flex flex-1 min-h-0">
    <%= render 'layouts/dashboard_sidebar' %>
    <div class="flex-1 p-6 overflow-auto">
      <!-- フラッシュメッセージ -->
      <%= render 'shared/flash_messages_persistent' %>

      <!-- ページタイトル -->
      <div class="flex justify-between items-center mb-6">
        <div>
          <h1 class="text-2xl font-bold text-slate-800">発注履歴</h1>
          <p class="text-sm text-slate-600 mt-1">過去の発注記録を確認できます</p>
        </div>
        <%= link_to select_items_order_emails_path, class: "#{button_classes(variant: :primary, size: :md)} inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          新規発注
        <% end %>
      </div>

      <!-- 検索・フィルターバー -->
      <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4 mb-6">
        <%= search_form_for @q, url: orders_path, html: { class: "grid grid-cols-1 md:grid-cols-4 gap-4 items-end" } do |sf| %>
          <div>
            <%= sf.label :order_date_gteq, "発注日（開始）", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= sf.date_field :order_date_gteq,
                              class: "w-full border border-slate-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          </div>
          <div>
            <%= sf.label :order_date_lteq, "発注日（終了）", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= sf.date_field :order_date_lteq,
                              class: "w-full border border-slate-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          </div>
          <div>
            <%= sf.label :supplier_id_eq, "発注先", class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= sf.select :supplier_id_eq,
                          options_from_collection_for_select(current_user.company.suppliers.order(:name), :id, :name, @q.supplier_id_eq),
                          { include_blank: '全ての発注先' },
                          class: "w-full border border-slate-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
          </div>
          <div class="flex gap-2">
            <%= sf.submit "検索", class: button_classes(variant: :primary, size: :md) %>
            <%= link_to "クリア", orders_path, class: button_classes(variant: :secondary, size: :md) %>
          </div>
        <% end %>
      </div>

      <% if @orders.any? %>
        <div class="bg-white rounded-lg shadow">
          <div class="overflow-x-auto">
            <table class="w-full min-w-[700px] divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">発注日</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">発注先</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">物品数</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ステータス</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">発注者</th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @orders.each do |order| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm text-gray-900">
                      <%= order.order_date&.strftime('%Y/%m/%d') || order.created_at.strftime('%Y/%m/%d') %>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                      <div class="text-xs sm:text-sm font-medium text-gray-900">
                        <%= order.supplier.name %>
                      </div>
                      <div class="text-xs sm:text-sm text-gray-500">
                        <%= order.supplier.email %>
                      </div>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm text-gray-900">
                      <%= order.order_items.count %>件
                      <span class="text-gray-500">
                        (計<%= order.order_items.sum(:quantity) %>個)
                      </span>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                      <% case order.status %>
                      <% when 'pending' %>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                          未送信
                        </span>
                      <% when 'sent' %>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                          送信済み
                        </span>
                      <% when 'confirmed' %>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                          確認済み
                        </span>
                      <% when 'received' %>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                          入荷済み
                        </span>
                      <% when 'cancelled' %>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                          キャンセル
                        </span>
                      <% end %>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm text-gray-900">
                      <%= order.user.name %>
                    </td>
                    <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-xs sm:text-sm font-medium">
                      <%= link_to "詳細", order_path(order), class: "text-blue-600 hover:text-blue-800" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- ページネーション -->
          <div class="px-4 py-3 bg-slate-50 border-t border-slate-200 sm:px-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
              <div class="mb-4 sm:mb-0">
                <p class="text-sm text-gray-700">
                  <span class="font-medium">
                    全<%= @orders.total_count %>件中 <%= @orders.offset_value + 1 %>-<%= @orders.offset_value + @orders.length %>件を表示
                  </span>
                </p>
              </div>
              <div class="flex justify-center sm:justify-end">
                <%= paginate @orders %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow p-8 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">発注履歴なし</h3>
          <p class="mt-1 text-sm text-gray-500">まだ発注を記録していません</p>
          <div class="mt-6">
            <%= link_to select_items_order_emails_path, class: "#{button_classes(variant: :primary, size: :md)} inline-flex items-center" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              新規発注
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
